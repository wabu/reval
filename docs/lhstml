#!/usr/bin/sed -f

1i\
<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"\
              "http://www.w3.org/TR/html4/loose.dtd">\
<html>\
  <head>\
    <title>lhstml</title><meta content="text/html; charset=UTF-8"  http-equiv="Content-Type" />\
  </head>\
  <body>\

# headlines
/^-\+$/d
s,^- \(.*\) -$,<h1>\1</h1>, 
s,^-- \(.*\) --$,<h2>\1</h2>, 
s,^--- \(.*\) ---$,<h3>\1</h3>, 
s,^---- \(.*\) ----$,<h4>\1</h4>, 

# lists
/^\* /{
    s,^\* ,<ul><li>,
    :i
        :nl
            ${  s,$,</li><ul>,
                be
            }
            n
            s,^\s,,
        tnl
        s,^\* ,</li><li>,
    ti
    s,^,</li></ul>,
}

# line
s,_\+,</hl>,

# code
/^>/{
    s,^>,<pre>>,
    :c
        ${  s,$,</pre>,
            be
        }
        n
        s,^>,>,
    tc
    s,^$,</pre>,
}

# pre
/^  /{
    s,^  ,<pre>,
    :p
        ${  s,$,</pre>,
            be
        }
        n
        s,^  ,,
    tp
    s,^$,</pre>,
}

:e
$a\
  </body>\
</html>
